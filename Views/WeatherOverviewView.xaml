<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.WeatherOverviewView">


    <Grid RowDefinitions="Auto, Auto, Auto, 2*">

        <ScrollView Orientation="Horizontal" Grid.Row="0">
            <CollectionView ItemsSource="{Binding Locations}" 
                SelectionMode="Single"
                x:Name="TabCollection"
                SelectedItem="{Binding SelectedTab, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectionChangedCommand}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="10">
                            <Label Text="{Binding Name}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto" HorizontalOptions="FillAndExpand">
            <Button Text="Exporteer" 
                HorizontalOptions="Start" 
                VerticalOptions="Start" 
                Grid.Column="0" 
                WidthRequest="110" 
                HeightRequest="40" 
                BackgroundColor="Transparent" 
                TextColor="Black" 
                BorderColor="LightGray" 
                BorderWidth="1" 
                Margin="0"
                Padding="0"
                CornerRadius="5" 
                Clicked="OnExportButtonClicked" />

            <Button Text="Dag" 
                HorizontalOptions="End" 
                VerticalOptions="Start" 
                Grid.Column="2" 
                WidthRequest="110" 
                HeightRequest="40" 
                BackgroundColor="Transparent" 
                TextColor="Black" 
                BorderColor="LightGray" 
                BorderWidth="1" 
                CornerRadius="5" 
                Margin="0"
                Padding="0"
                Clicked="OnDayWeekButtonClicked" />
        </Grid>

        <Label BindingContext="{Binding SelectedTab}" Text="{Binding Name}"></Label>
        <VerticalStackLayout Grid.Row="3">
            <WebView x:Name="MapWebView" HeightRequest="400" WidthRequest="300" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>
