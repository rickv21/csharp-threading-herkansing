<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.WeatherOverviewView"
             Title="Weeroverzicht">

    <Grid RowDefinitions="Auto, Auto, Auto, 2*">

        <ScrollView Orientation="Horizontal" Grid.Row="1">
            <CollectionView ItemsSource="{Binding Locations}" 
                SelectionMode="Single"
                x:Name="TabCollection"
                SelectedItem="{Binding SelectedTab}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="10">
                            <Label Text="{Binding Name}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" HorizontalOptions="FillAndExpand">
            <!-- Export Button -->
            <Button Text="Exporteer" 
                HorizontalOptions="Start" 
                VerticalOptions="Center" 
                Grid.Column="0" 
                WidthRequest="110" 
                HeightRequest="40" 
                BorderWidth="1" 
                Margin="0"
                Padding="0"
                CornerRadius="5" 
                Clicked="OnExportButtonClicked" />

            <StackLayout Orientation="Horizontal" 
                HorizontalOptions="Center" 
                VerticalOptions="Center"
                Grid.Column="1"
                Spacing="10">
                <Button Text="◀" 
                    Command="{Binding LeftArrowCommand}" />

                <Label Text="{Binding DisplayedDate, StringFormat='{0:dd-MM-yyyy}'}"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" />

                <Button Text="▶" 
                    Command="{Binding RightArrowCommand}" />
            </StackLayout>

            <Button Text="{Binding DayWeekButtonText}" 
                HorizontalOptions="End" 
                VerticalOptions="Center" 
                Grid.Column="2" 
                WidthRequest="110" 
                HeightRequest="40" 
                BorderWidth="1" 
                CornerRadius="5"
                Margin="0"
                Padding="0"
                Command="{Binding DayWeekCommand}" />
        </Grid>

        <ScrollView Orientation="Horizontal" Grid.Row="2">
            <CollectionView ItemsSource="{Binding WeatherItems}" BackgroundColor="#3A3A3A" 
                    x:Name="WeatherItemsCollection"
                    HorizontalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="0,0,0,10">
                            <Image Source="{Binding Image}" WidthRequest="40" HeightRequest="40" />
                            <Label Text="{Binding Condition}" HorizontalTextAlignment="Center" />
                            <Label Text="{Binding TimeStamp}" HorizontalTextAlignment="Center" />
                            <Label Text="{Binding MinTemp}" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding MaxTemp}" HorizontalTextAlignment="Center" />
                            <Label Text="{Binding Humidity}" HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <VerticalStackLayout Grid.Row="3">
            <!--Navigate to City View-->
            <Button
                Text="Voeg favoriete locaties toe"
                HorizontalOptions="Start"
                WidthRequest="200" 
                HeightRequest="40" 
                BorderWidth="1" 
                CornerRadius="5" 
                Margin="0"
                Padding="0"
                Clicked="CityViewButton_OnClicked" />
            <Button
                Text="Instellingen"
                HorizontalOptions="Start"
                WidthRequest="110" 
                HeightRequest="40" 
                BorderWidth="1" 
                CornerRadius="5" 
                Margin="0"
                Padding="0"
                Command="{Binding SettingsCommand}" />
            <WebView x:Name="MapWebView"
                    HeightRequest="400"
                    WidthRequest="300"
                    HorizontalOptions="Fill"
                    VerticalOptions="FillAndExpand" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>
