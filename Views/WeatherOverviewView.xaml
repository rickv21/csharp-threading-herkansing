<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.WeatherOverviewView">

    <ContentPage.BindingContext>
        <local:WeatherOverviewViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*, 2*">
        <!-- Verdeel het scherm in twee rijen -->
        <!-- Bovenste helft met tabbladen -->
        <TabbedPage Grid.Row="0">
            <ContentPage Title="Tab 1">
                <Label Text="Inhoud van Tab 1" />
            </ContentPage>
            <ContentPage Title="Tab 2">
                <Label Text="Inhoud van Tab 2" />
            </ContentPage>
        </TabbedPage>
        <!-- Onderste helft met bestaande content -->
        <VerticalStackLayout Grid.Row="1">
            <Label Text="Welcome to .NET MAUI!" VerticalOptions="Center" HorizontalOptions="Center" />
            <WebView x:Name="MapWebView" HeightRequest="400" WidthRequest="300" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
